<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class=".col-sm-6 col-lg-4">
            <div class="card card-course-item">
                {{!-- Access has been denied to resolve the property "image" because it is not an "own property" of its
                parent. --}}
                {{!-- Sẽ bị lỗi trên do hbs nó không cho phép truy cập --}}
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/course/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Buy Course</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>